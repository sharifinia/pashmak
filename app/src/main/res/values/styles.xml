<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:typeface">sans</item>

        <item name="android:textSelectHandle">@color/colorAccentLight</item>
        <item name="android:textSelectHandleLeft">@color/colorAccentLight</item>
        <item name="android:textSelectHandleRight">@color/colorAccentLight</item>
        <item name="colorControlActivated">@color/colorAccentLight</item>

    </style>

    <style name="myToolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@android:color/primary_text_dark</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="CustomTextStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/textSize_tabItem</item>
    </style>

    <style name="myAppBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="elevation">30dp</item>
    </style>

</resources>
